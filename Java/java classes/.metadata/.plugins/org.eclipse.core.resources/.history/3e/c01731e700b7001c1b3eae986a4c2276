package zählerschleife;

public class Zählerschleife {

	public static void main(String[] args) {
		
		for(int i = 1; i < 10; i++){  // 3-teilige Schleife  i = 0 wird nur einmal zu Beginn ausgeführt (Initialisierung der schleife bei 0) 
		                              //  i < 10 ist die Bedingung falls diese true ist wird der Block {} ausgeführt 
			System.out.println(i * 2);    //  i++ erhöht nach ausführung des Blocks {}  die Variable um 1  (i-- würde eine verminderung bewirken) 
		}

	}

}
