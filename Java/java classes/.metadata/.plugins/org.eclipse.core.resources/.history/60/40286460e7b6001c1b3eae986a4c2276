package classes;

public class Classes {

	public static void main(String[] args) {
		
		char test = 'a';                              // char kann nur einzelne Buchstaben  zugewiesen werden   ' beachten
		System.out.println(test);                     // Primitive Datentypen starten immer mit Kleinbuchstaben

		String test1 = "string for texts!";          // Datentyp String wird für Texte verwendet  
		System.out.println(test1);                   //Klassen starten mit Großbuchstaben
	     
		System.out.println("Info: " +test+ "is as important as english");
	}

}
